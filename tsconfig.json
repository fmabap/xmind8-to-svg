{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "outDir": "dist",
        "rootDir": "src",
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "moduleResolution": "Node10",
    },
    "tsc-alias": {
        "resolveFullPaths": true,
        "verbose": false
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}